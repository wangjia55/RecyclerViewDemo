<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_above="@+id/recyclerView"/>

   <com.jacob.recyclerview.gallery.GalleryRecyclerView
       android:id="@+id/recyclerView"
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:scrollbars="none"
       android:layout_above="@+id/button_animator"
       android:overScrollMode="never"
       android:background="#fff0fcff"/>

    <Button
        android:id="@+id/button_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Animator"
        android:onClick="testAnimator"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
